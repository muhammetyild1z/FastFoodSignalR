@model OrderResult
@{
    ViewData["Title"] = "OrderUpdate";
    Layout = "~/Areas/Admin/Views/Layout/Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">Siparis Guncelleme</div>
    </div>

    <form method="post">
        <div class="card-body">
            <input  hidden asp-for="OrderID"/>
            <input  hidden asp-for="OrderDateTime"/>
            <div class="form-group">
                <label for="squareInput">Siparis Fiyati</label>
                <input type="text" class="form-control input-square" id="squareInput"  asp-for="OrderTotalPrice">
            </div>
            <div class="form-group">
                <label for="squareInput">Masa Numarasi</label>
                <input type="text" class="form-control input-square" id="squareInput" asp-for="TableNumber">
            </div>


            <div class="form-group">
                <label for="squareInput">Siparis Durumu</label>
                <input type="text" class="form-control input-square" id="squareInput"  asp-for="OrderStatus">
            </div>

            
            <div class="form-group">
                <label for="squareInput">Hesap Durumu</label>
                <input type="text" class="form-control input-square" id="squareInput" asp-for="OrderDescription">
            </div>


        </div>
        <div class="card-action">
            <button type="submit" class="btn btn-success">Guncelle</button>
            @* <button class="btn btn-danger">Cancel</button>*@
        </div>
    </form>


</div>

