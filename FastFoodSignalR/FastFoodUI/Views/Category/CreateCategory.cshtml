@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Layout/Layout.cshtml";
}


<div>
   
    <div class="card">
         <form method="post" >
        <div class="card-header">
            <div class="card-title">Kategori Ekleme</div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="squareInput">Kategori Adi</label>
                <input type="text" class="form-control input-square" id="squareInput" placeholder="Kategori Adi" asp-for="CategoryName">
            </div>
                <div class="form-group">
                    <label for="squareSelect">Kategori Durumu</label>
                    <select class="form-control input-square" id="squareSelect" asp-for="CategoryStatus">
                        <option value="1">True</option>
                        <option value="0">False</option>
                                         
                    </select>
                </div>

        </div>
        <div class="card-action">
                <a  href="/Category/CreateCategory" class="btn btn-success">Ekle</a>
           @* <button class="btn btn-danger">Cancel</button>*@
        </div>
        </form>
    </div>
   
</div>
