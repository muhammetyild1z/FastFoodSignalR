@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">Kategori Guncelleme</div>
    </div>

    <form method="post">
        <div class="card-body">

            <div class="form-group">
                <label for="squareInput">Hakkinda Baslik</label>
                <input type="text" class="form-control input-square" id="squareInput" placeholder="Hakkinda IMG" asp-for="AboutTitle">
            </div>

            <div class="form-group">
                <label for="squareInput">Hakkinda Detay</label>
                <input type="text" class="form-control input-square" id="squareInput" placeholder="Hakkinda Detay" asp-for="AboutDescription">
                <input type="hidden" asp-for="AboutID">
            </div>

            <div class="form-group">
                <label for="squareInput">Hakkinda IMG</label>
                <input type="text" class="form-control input-square" id="squareInput" placeholder="Hakkinda IMG" asp-for="AboutImageUrl">
            </div>




        </div>
        <div class="card-action">
            <button type="submit" class="btn btn-success">Guncelle</button>
            @* <button class="btn btn-danger">Cancel</button>*@
        </div>
    </form>


</div>

