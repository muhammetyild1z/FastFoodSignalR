@model List< ResultBookingDto>;
@{
    ViewData["Title"] = "ListBooking";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<table class="table mt-3">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> Rezervasyon Sahibi</th>
            <th scope="col"> Telefon Numarasi</th>
            <th scope="col"> Mail Adresi</th>
            <th scope="col"> Kac kisi </th>
            <th scope="col"> Rezervasyon TARIHI  </th>
            <th scope="col">Sil</th>
            <th scope="col">Guncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> <input type="hidden" value="@item.BookindID" /></td>
                <td>@item.BookingName</td>
                <td>@item.BookingPhone</td>
                <td>@item.BookingMail</td>
                <td>@item.BookingPersonCount</td>
                <td><input type="date" disabled value="@item.BookingDate.ToString("dd-MMMM-yy-hh-mm")" /></td>
                <td><a href="/About/DeleteAbout/@item.BookindID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/About/UpdateAbout/@item.BookindID" class="btn btn-outline-success">Guncelle</a></td>
            </tr>
        }
        @ViewBag.ErrorMessage
    </tbody>
</table>

