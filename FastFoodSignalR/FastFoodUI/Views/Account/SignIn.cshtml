@model SignInDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/UILayout/Layout.cshtml";
}
</div>
<div class="container mt-5">
    <!-- Pills navs -->
    <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="/Account/SignIn/" role="tab"
               aria-controls="pills-login" aria-selected="true">Giris Yap</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link " id="tab-register" data-mdb-toggle="pill" href="/Account/SignUp/" role="tab"
               aria-controls="pills-register" aria-selected="false">Uye Ol</a>
        </li>
    </ul>
    <!-- Pills navs -->
    <!-- Pills content -->
    <div class="tab-content">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form method="post">
                <div class="text-center mb-3">
                    <p>Sign in with:</p>
                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-facebook-f"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-google"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-twitter"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-github"></i>
                    </button>
                </div>

                <p class="text-center">or:</p>

                <div class="col-md-6 m-auto">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input asp-for="UserName" type="text" id="loginName" class="form-control " placeholder="Kullanici adi" />

                    </div>
                  
                 

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Password" type="password" id="loginPassword" class="form-control " placeholder="Sifre" />

                    </div>
                 
                </div>

                <!-- 2 column grid layout -->
                <div class="row mb-4">
                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-3 mb-md-0">
                            <input class="form-check-input" type="checkbox"  asp-for="RememberMe" id="rememberMe"  />
                            <label class="form-check-label" for="rememberMe"> Beni hatirla </label>
                        </div>
                    </div>

                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Simple link -->
                        <a href="#!">Sifreni mi Unuttun?</a>
                    </div>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Giris Yap</button>

                <!-- Register buttons -->
                <div class="text-center">
                    <p>Üye değil misin? <a href="#!">Uye Ol</a></p>
                </div>


            </form>
        </div>



        <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
            <form>
                <div class="text-center mb-3">
                    <p>Giriş Yap</p>
                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-facebook-f"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-google"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-twitter"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-github"></i>
                    </button>
                </div>

                <p class="text-center">or:</p>

              

                <!-- Username input -->
                <div class="form-outline mb-4">
                    <input type="text" id="registerUsername" class="form-control" />
                    <label class="form-label" for="registerUsername">Kullanici Adı</label>
                </div>

             

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="registerPassword" class="form-control" />
                    <label class="form-label" for="registerPassword">Şifre</label>
                </div>           

                <!-- Checkbox -->
              @*     <div class="form-check d-flex justify-content-center mb-4">
                <input class="form-check-input me-2" type="checkbox" value="" id="registerCheck" checked
                aria-describedby="registerCheckHelpText" />
                <label class="form-check-label" for="registerCheck">
              Beni Hatırla
                </label>
                </div>*@

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-3">Giriş Yap</button>
            </form>
        </div>
    </div>
    <!-- Pills content -->
</div>
@if (ViewBag.UserCreateSuccess != null)
{
    <script>

        Swal.fire({
            title: "@ViewBag.UserCreateSuccess",
            text: "Giriş Ekranına Yönlendiriliyorsunuz.. ",
            icon: "success",
            confirmButtonText: 'Tamam',
            showCancelButton: false,
        @*   cancelButtonText: 'Iptal et',
        dangerMode: true,*@

                })
    </script>
}

