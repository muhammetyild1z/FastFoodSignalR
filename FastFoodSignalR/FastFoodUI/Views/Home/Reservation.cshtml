@model CreateBookingDto
@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/UILayout/Layout.cshtml";
}

<
<!-- book section -->
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Rezervasyon Oluştur
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post">
                        <div>
                            <input asp-for="BookingName" type="text" class="form-control" placeholder="İsim Soyisim" />
                        </div>
                        <div>
                            <input asp-for="BookingPhone" type="text" class="form-control" placeholder="Telefon Numarası" />
                        </div>
                        <div>
                            <input asp-for="BookingMail" type="email" class="form-control" placeholder="Mail Adresi" />
                        </div>
                        <div>
                            <select asp-for="BookingPersonCount" class="form-control nice-select wide">
                                <option value="" disabled selected>
                                    Kaç Kişilik
                                </option>
                                <option value="2">
                                    2
                                </option>
                                <option value="3">
                                    3
                                </option>
                                <option value="4">
                                    4
                                </option>
                                <option value="5">
                                    5
                                </option>
                            </select>
                        </div>
                        <div>
                            <textarea asp-for="BookingDesciption" class="form-control" placeholder="Notunuz Varsa Yazabilirsiniz." rows="4"></textarea>
                        </div>
                        <div>
                            <input asp-for="BookingDate" type="date" class="form-control">
                        </div>
                        <div class="row">
                            <ul class="list-group">
                               
                                <li class=" ml-3 list-group-item col-md-4 rounded-circle">
                                    <a>15.40</a>
                                    </li>
                                

                            </ul>
                        </div>

                        <div class="btn_box">
                            <button type="submit">
                                Rezervasyon Olustur
                            </button>
                        </div>


                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3183.565088209581!2d37.38340120000001!3d37.067845999999996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1531e6ad462702ff%3A0x4e2d7c9aa5cd4930!2sTarihi%20Naip%20Hamam%C4%B1!5e0!3m2!1str!2str!4v1704793707667!5m2!1str!2str" width="600" height="450" style="border:0;"
                            allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
@if (ViewBag.bookingSuccess != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        Swal.fire({
            title: '@ViewBag.bookingSuccess',
            text: 'Gün İçinde Rezerasyonunuzu Onaylamak İçin Sizinle İletişim Kuracağız..',
            icon: 'success',
            confirmButtonText: 'Tamam'
        });
    </script>
}
<!-- end book section -->