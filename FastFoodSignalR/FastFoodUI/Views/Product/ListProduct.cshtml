@model List<ResultProductDto>
@{
    ViewData["Title"] = "ListProduct";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<table class="table mt-3">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Urun Adi</th>
            <th scope="col">Urun Aciklamasi</th>
            <th scope="col">Urun image</th>
            <th scope="col">Urun Kategori</th>      
            <th scope="col">Urun Durumu</th>
            <th scope="col">Urun Fiyati</th>
            <th scope="col">Urun Durumu</th>
            <th scope="col">Sil</th>
            <th scope="col">Guncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> <input type="hidden" value="@item.Category.CategoryID"/></td>
                <td>@item.ProductName</td>
                <td>@item.ProductDescription</td>
                <td>@item.ProductImageUrl</td>
                <td>@item.Category.CategoryID</td>
                <td>@item.ProductStatus</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductDescription</td>
                <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Guncelle</a></td>
            </tr>
        }
        @ViewBag.ErrorMessage
    </tbody>
</table>

<a href="/Product/CreateProduct/" class="btn btn-outline-info">Yeni Urun Ekle</a>

