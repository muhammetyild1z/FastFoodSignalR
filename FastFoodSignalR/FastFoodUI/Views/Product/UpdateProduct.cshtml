@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Layout/Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">Urun Ekleme</div>
    </div>

    <form method="post">
        <div class="card-body">
            <div class="form-group">

                <input type="hidden"  asp-for="ProductID">

                <label for="squareInput">Urun Adi</label>
                <input type="text" class="form-control input-square" id="squareInput" placeholder="Urun Adi" asp-for="ProductName">
            </div>
            <div class="form-group">
                <label for="squareInput">Urun Adi</label>
                <input type="text" class="form-control input-square" id="squareInput" placeholder="Urun Aciklamasi" asp-for="ProductDescription">
            </div>
            <div class="form-group">
                <label for="squareInput">Urun Fiyati</label>
                <input type="text" class="form-control input-square" id="squareInput" placeholder="Urun Fiyati" asp-for="ProductPrice">
            </div>
            <div class="form-group">
                <label for="squareInput">Urun Resim</label>
                <input type="text" class="form-control input-square" id="squareInput" placeholder="Urun image" asp-for="ProductImageUrl">
            </div>
            <div class="form-group">
                <label for="squareSelect">Urun Kategorisi</label>
                <select class="form-control input-square" id="squareSelect" asp-for="CategoryID">
                    @foreach (var item in ViewBag.Category)
                    {
                        <option value="@item.CategoryID">@item.CategoryName</option>
                    }


                </select>
            </div>
            <div class="form-group">
                <label for="squareSelect">Urun Durumu</label>
                <select class="form-control input-square" id="squareSelect" asp-for="CategoryID">

                    <option value="1">True</option>
                    <option value="0">False</option>

                </select>
            </div>
        </div>
        <div class="card-action">
            <button type="submit" class="btn btn-success">Ekle</button>
            @* <button class="btn btn-danger">Cancel</button>*@
        </div>
    </form>


</div>

